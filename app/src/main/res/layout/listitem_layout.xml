<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:longClickable="false"
    android:nestedScrollingEnabled="false"
    android:transitionGroup="false"
    android:touchscreenBlocksFocus="false"
    >

    <ImageView
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:id="@+id/resImg"
        android:src="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/r_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name :"
        android:id="@+id/r_name"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explanation :"
        android:id="@+id/r_explanation"
        android:layout_below="@+id/resImg"
        android:layout_alignLeft="@+id/r_rating"
        android:layout_alignStart="@+id/r_rating"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating :"
        android:id="@+id/r_rating"
        android:layout_alignBottom="@+id/resImg"
        android:layout_alignLeft="@+id/r_name"
        android:layout_alignStart="@+id/r_name" />

    <RatingBar
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/ratingBar"
        android:longClickable="false"
        android:stepSize="1"
        android:progressBackgroundTint="#fffcff66"
        android:secondaryProgressTint="#fffcff42"
        android:rating="3"
        android:backgroundTint="#fffbff07"
        style="?android:attr/ratingBarStyleSmall"
        android:clickable="false"
        android:indeterminateOnly="false"
        android:maxHeight="50dp"
        android:mirrorForRtl="false"
        android:nestedScrollingEnabled="false"
        android:progressTint="#fffffa01"
        android:numStars="4"
        android:layout_alignLeft="@+id/resDesc"
        android:layout_alignStart="@+id/resDesc"
        android:layout_alignTop="@+id/r_rating"
        android:layout_alignRight="@+id/resName"
        android:layout_alignEnd="@+id/resName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/resName"
        android:layout_alignTop="@+id/r_name"
        android:layout_alignLeft="@+id/resDesc"
        android:layout_alignStart="@+id/resDesc"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/resDesc"
        android:layout_alignTop="@+id/r_explanation"
        android:layout_toRightOf="@+id/r_name"
        android:layout_toEndOf="@+id/r_name" />

</RelativeLayout>